{
  "compilerOptions": {
    "target": "es6",
    "module": "system",
    "lib": [
      "es6"
    ],
    "outDir": "./lib/",
    "outFile": "./lib/main.js",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "lib", 
    "node_modules"
  ]
}